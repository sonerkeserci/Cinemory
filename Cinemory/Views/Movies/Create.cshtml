@model Cinemory.Models.ViewModels.MovieCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Movie</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Director</label>
        <select asp-for="DirectorId" asp-items="Model.Directors" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Genres</label>
        @foreach (var genre in Model.Genres)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedGenreIds" value="@genre.Value" />
                <label class="form-check-label">@genre.Text</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label>Actors</label>
        @foreach (var actor in Model.Actors)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedActorIds" value="@actor.Value" />
                <label class="form-check-label">@actor.Text</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
