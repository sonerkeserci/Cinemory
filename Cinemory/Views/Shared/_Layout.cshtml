<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinemory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinemory.styles.css" asp-append-version="true" />
</head>
@{
    var showLayoutParts = ViewBag.ShowLayoutParts ?? true;
}
<body style="margin: 0; padding: 0; background-color: #d3d6db; color: #303841;">

    @if (showLayoutParts)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand text-danger" asp-controller="Home" asp-action="Index">Cinemory</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container-fluid p-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (showLayoutParts)
    {
        <footer class="border-top text-muted mt-5">
            <div class="container">
                &copy; 2025 - Cinemory - <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
