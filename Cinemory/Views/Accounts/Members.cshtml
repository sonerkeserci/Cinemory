@model List<AppUser>
@{
    ViewData["Title"] = "About";
    ViewBag.NavMenu = "Landing";
    ViewData["HideNavMenu"] = true; // 👈 Bu satır menüyü yok eder
}

<h2 style="margin-bottom: 20px;">Members</h2>

<table style="width: 100%; max-width: 800px; border-collapse: collapse;">
    <thead>
        <tr style="background-color: #222; color: #fff;">
            <th style="text-align: left; padding: 10px;">Username</th>
            <th style="text-align: left; padding: 10px;">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 10px;">@user.UserName</td>
                <td style="padding: 10px;">@user.Email</td>
            </tr>
        }
    </tbody>
</table>
