@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Access Denied</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('/images/access_denied.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            backdrop-filter: brightness(0.4);
        }

        .content {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 40px;
            border-radius: 10px;
            text-align: center;
        }

            .content h1 {
                font-size: 3rem;
                color: #ff4c4c;
            }

            .content p {
                font-size: 1.25rem;
                margin-top: 1rem;
            }

    </style>
</head>
<body>
    <div class="content">
        <h1>ACCESS DENIED</h1>
        <p>You do not have permission to access this page!</p>
        <a href="/UserFeed" class="btn-transparent">Return your feed!</a>
    </div>
</body>
</html>
